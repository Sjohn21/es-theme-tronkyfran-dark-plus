<theme>
	<formatVersion>4</formatVersion>
	<view name="system">
		<image name="background" extra="true">
			<path>./${system.theme}/background.jpg</path>
			<size>0 1</size>
			<pos>0.5 0.5</pos>
			<origin>0.5 0.5</origin>
		</image>
		<carousel name="systemcarousel">
			<pos>0 0.7</pos>
		</carousel>
		<text name="systemInfo">
			<pos>0.02 0.59</pos>
			<size>0.5 0</size>
			<color>FFFFFFFF</color>
		</text>
		<text name="systInfoWrapper" extra="true">
			<pos>0.02 0.04 </pos>
			<size>0.5 0.61</size>
			<backgroundColor>000000B8</backgroundColor>
		</text>
		<image name="sysLogo" extra="true">
			<maxSize>0 0.05</maxSize>
			<size>0 0.05</size>
			<pos>0.26 0.085</pos>
			<origin>0.5 0.5</origin>
			<path>./${system.theme}/logo-light.svg</path>
		</image>
		<text name="releaseDateLabel" extra="true">
			<pos>0.025 0.125</pos>
			<size>0.11 0.03</size>
			<alignment>left</alignment>
			<fontPath>./assets/Roboto-Bold.ttf</fontPath>
			<fontSize>0.03</fontSize>
			<color>FFFFFFFF</color>
			<text>Release date:</text>
		</text>
		<text name="developerLabel" extra="true">
			<pos>0.025 0.16</pos>
			<size>0.11 0.03</size>
			<alignment>left</alignment>
			<fontPath>./assets/Roboto-Bold.ttf</fontPath>
			<fontSize>0.03</fontSize>
			<color>FFFFFFFF</color>
			<text>Developer:</text>
		</text>
		<text name="aboutLabel" extra="true">
			<pos>0.025 0.195</pos>
			<size>0.11 0.03</size>
			<alignment>left</alignment>
			<fontPath>./assets/Roboto-Bold.ttf</fontPath>
			<fontSize>0.03</fontSize>
			<color>FFFFFFFF</color>
			<text>About:</text>
		</text>
		<image name="logo">
			<path>./${system.theme}/logo.svg</path>
		</image>
	</view>
	<feature supported="video">
		<view name="video">
			<video name="md_video">
				<pos>0.1525 0.35</pos>
				<maxSize>0.255 0.34</maxSize>
				<origin>0.5 0.5</origin>
				<default />
				<showSnapshotNoVideo>true</showSnapshotNoVideo>
				<showSnapshotDelay>false</showSnapshotDelay>
			</video>
		</view>
	</feature>
	<view name="basic, detailed, video">
		<text name="md_lbl_rating, md_lbl_releasedate, md_lbl_developer, md_lbl_publisher, md_lbl_genre, md_lbl_players, md_lbl_lastplayed, md_lbl_playcount, md_rating, md_developer, md_publisher, md_genre, md_players, md_playcount, md_description">
			<color>FFFFFFFF</color>
			<forceUppercase>1</forceUppercase>
			<fontPath>./assets/Roboto-Light.ttf</fontPath>
			<fontSize>0.025</fontSize>
		</text>
		<text name="md_lbl_rating, md_lbl_releasedate, md_lbl_developer, md_lbl_publisher, md_lbl_genre, md_lbl_players, md_lbl_lastplayed, md_lbl_playcount">
			<size>0.12 0.04</size>
		</text>
		<text name="md_rating, md_developer, md_publisher, md_genre, md_players, md_playcount">
			<size>0.125 0.04</size>
		</text>
		<datetime name="md_releasedate, md_lastplayed">
			<color>FFFFFFFF</color>
			<forceUppercase>1</forceUppercase>
			<fontPath>./assets/Roboto-Light.ttf</fontPath>
			<fontSize>0.025</fontSize>
			<size>0.24 0.04</size>
		</datetime>
		<image name="background" extra="true">
			<path>./${system.theme}/background.jpg</path>
			<size>0 1</size>
			<pos>0.5 0.5</pos>
			<origin>0.5 0.5</origin>
		</image>
		<image name="md_marquee">
			<pos>0.025 0.08</pos>
			<maxSize>0.4 0.1</maxSize>
			<origin>0 0.5</origin>
		</image>
		<textlist name="gamelist">
			<selectorColor>151515</selectorColor>
			<selectedColor>0098a6</selectedColor>
			<primaryColor>ebebeb</primaryColor>
			<secondaryColor>ebebeb</secondaryColor>
			<fontPath>./assets/Roboto-Regular.ttf</fontPath>
			<fontSize>0.03</fontSize>
			<forceUppercase>1</forceUppercase>
		</textlist>
		<text name="header" extra="true">
			<pos>0 0</pos>
			<origin>0 0</origin>
			<size>1 0.16</size>
			<backgroundColor>000000BB</backgroundColor>
		</text>
		<image name="logo">
			<path>./${system.theme}/logo-light.svg</path>
			<pos>0.975 0.08</pos>
			<maxSize>0.2 0.1</maxSize>
			<origin>1 0.5</origin>
		</image>
	</view>
	<view name="detailed, video">
		<text name="videoImagerapper" extra="true">
			<pos>0.025 0.18</pos>
			<size>0.255 0.34</size>
			<backgroundColor>000000BB</backgroundColor>
		</text>
		<text name="infoWrapper" extra="true">
			<pos>0.3 0.18 </pos>
			<size>0.29 0.34</size>
			<backgroundColor>000000BB</backgroundColor>
		</text>
		<text name="descriptionWrapper" extra="true">
			<pos>0.025 0.54 </pos>
			<size>0.565 0.37</size>
			<backgroundColor>000000BB</backgroundColor>
		</text>
		<text name="gamelistWrapper" extra="true">
			<pos>0.61 0.18</pos>
			<size>0.365 0.73</size>
			<backgroundColor>000000BB</backgroundColor>
		</text>
		<text name="md_lbl_rating">
			<pos>0.32 0.19</pos>
		</text>
		<text name="md_lbl_releasedate">
			<pos>0.32 0.23</pos>
		</text>
		<text name="md_lbl_developer">
			<pos>0.32 0.27</pos>
		</text>
		<text name="md_lbl_publisher">
			<pos>0.32 0.31</pos>
		</text>
		<text name="md_lbl_genre">
			<pos>0.32 0.35</pos>
		</text>
		<text name="md_lbl_players">
			<pos>0.32 0.39</pos>
		</text>
		<text name="md_lbl_lastplayed">
			<pos>0.32 0.43</pos>
		</text>
		<text name="md_lbl_playcount">
			<pos>0.32 0.47</pos>
		</text>
		<rating name="md_rating">
			<pos>0.445 0.19</pos>
			<filledPath>./assets/star_filled_spacing.svg</filledPath>
			<unfilledPath>./assets/star_hollow_3_spacing.svg</unfilledPath>
		</rating>
		<datetime name="md_releasedate">
			<pos>0.445 0.23</pos>
		</datetime>
		<text name="md_developer">
			<pos>0.445 0.27</pos>
		</text>
		<text name="md_publisher">
			<pos>0.445 0.31</pos>
		</text>
		<text name="md_genre">
			<pos>0.445 0.35</pos>
		</text>
		<text name="md_players">
			<pos>0.445 0.39</pos>
		</text>
		<datetime name="md_lastplayed">
			<pos>0.445 0.43</pos>
		</datetime>
		<text name="md_playcount">
			<pos>0.445 0.47</pos>
		</text>
		<text name="md_description">
			<size>0.545 0.34</size>
			<pos>0.035 0.55</pos>
		</text>
		<textlist name="gamelist">
			<pos>0.61 0.18</pos>
			<size>0.365 0.73</size>
			<alignment>left</alignment>
			<horizontalMargin>0.01</horizontalMargin>
		</textlist>
	</view>
	<view name="detailed">
		<image name="md_image">
			<pos>0.1525 0.35</pos>
			<maxSize>0.255 0.34</maxSize>
			<origin>0.5 0.5</origin>
		</image>
	</view>
</theme>


